{
    "name": "minilogo",
    "displayName": "minilogo",
    "description": "An implementation of the MiniLogo Language in Langium",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "minilogo",
            "aliases": ["Mini Logo", "minilogo"],
            "extensions": [".logo"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "minilogo",
            "scopeName": "source.minilogo",
            "path": "./syntaxes/minilogo.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:minilogo"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "minilogo-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "build:worker": "esbuild ./out/language-server/main-browser.js --bundle --format=iife --outfile=./out/libs/minilogo-server-worker.js",
        "build:generator": "esbuild ./out/cli/index-browser.js --bundle --global-name=MiniLogo --outfile=./out/libs/minilogo-generator.js",
        "copy:monaco-editor-wrapper": "npx shx cp -fr ./node_modules/monaco-editor-wrapper/bundle ./out/libs/monaco-editor-wrapper",
        "copy:monaco-workers": "npx shx cp -fr ./node_modules/monaco-editor-workers/dist/ ./out/libs/monaco-editor-workers",
        "build:web": "npm run build && npm run build:worker && npm run build:generator && npm run copy:monaco-editor-wrapper && npm run copy:monaco-workers",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "generate:test": "./bin/cli generate ./examples/test.logo && npx shx cp -fr ./out/libs ./examples/generated",
        "generate:logo": "./bin/cli generate ./examples/langium.logo && npx shx cp -fr ./out/libs ./examples/generated"
    },
    "dependencies": {
        "colors": "^1.4.0",
        "commander": "^8.0.0",
        "langium": "0.5.0-next.f2b3802",
        "vscode-languageclient": "^8.0.1",
        "vscode-languageserver": "^8.0.1",
        "monaco-editor-comp": "0.4.1-dev.0"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "langium-cli": "0.5.0-next.f2b3802",
        "typescript": "^4.1.3",
        "esbuild": "0.14.47",
        "monaco-editor-wrapper": "1.0.0",
        "monaco-editor-workers": "0.34.2"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/montymxb/minilogo-langium-example"
    },
    "bugs": "https://github.com/montymxb/minilogo-langium-example/issues",
    "author": {
        "name": "Benjamin Friedman Wilson",
        "url": "https://github.com/montymxb"
    }
}
